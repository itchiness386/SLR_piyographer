<%= render 'layouts/users_header' %>

<div class="body">
	<div class="container">

    <div class="row justify-content-center">
      <div class="col-8">

        <h4>カメラ情報登録</h4>

          <% if @camera.errors.any? %>
            <div id="error_explanation">
              <p><%= @camera.errors.count %> 件のエラーがあります</p>
              <ul>
                <% @camera.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

      		<%= form_for(@camera) do |f| %>
            <table class="table">
              <tr>
                <th>メーカー名</th>
                <td><%= f.text_field :manufacturer, class: "name col-6" %></td>
              </tr>
              <tr>
                <th>機種名</th>
                <td><%= f.text_field :modelname, class: "name col-12" %></td>
              </tr>
            </table>

            <div class="actions">
              <%= f.submit '保存', class: "btn btn-outline-success col-12" %>
            </div>
          <% end %>

      </div>
    </div>

　</div>
</div>