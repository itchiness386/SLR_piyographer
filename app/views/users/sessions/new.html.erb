<%= render 'layouts/users_header' %>

<div class="body">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></td>
              </tr>
              <tr>
                <td>パスワード</td>
                <td><%= f.password_field :password, autocomplete: "current-password", class: "col-12" %></td>
              </tr>
            </tbody>
          </table>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-outline-success col-12" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>