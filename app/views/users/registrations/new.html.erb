<div class="row justify-content-center">
  <div class="col-6">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></td>
            </tr>
            <tr>
              <td>ユーザ名</td>
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-12" %></td>
            </tr>
            <tr>
              <td>パスワード</td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password", class: "col-12" %>
                <br>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12" %></td>
            </tr>
          </tbody>
        </table>

        <div class="actions">
          <%= f.submit "会員登録", class: "btn btn-outline-success btn-lg col-12" %>
        </div>

    <% end %>

  </div>
</div>