<%= render 'layouts/admins_header' %>

<div class="body">
  <div class="container">

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <h3>ログイン</h3>

    <div class="row justify-content-center">
      <div class="col-6">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></td>
              </tr>
              <tr>
                <td>パスワード</td>
                <td><%= f.password_field :password, autocomplete: "current-password", class: "col-12" %></td>
              </tr>
            </tbody>
          </table>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-outline-success col-12" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>