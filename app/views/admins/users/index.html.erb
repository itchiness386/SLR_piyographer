<%= render 'layouts/admins_header' %>

<div class="body">
  <div class="container">

    <h3>ユーザ一覧</h3>

    <div class="row justify-content-center">
      <div class="col-6">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>ユーザID</th>
              <th>ユーザ名</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.name, admins_user_path(user) %></td>
                <td>
                  <% if user.status == true %>
                    有効
                  <% else %>
                    退会
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
