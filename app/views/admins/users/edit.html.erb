<%= render 'layouts/admins_header' %>

<div class="body">
  <div class="container">

  	<%= form_for [:admins, @user] do |f| %>
      <div class="row justify-content-center">
        <div class="col-8">
          <table class="table">
            <tr>
              <th>ユーザ名</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= @user.introduction %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <label><%=f.radio_button :status, "true" %>有効</label>
                <label><%=f.radio_button :status, "false" %>退会</label>
              </td>
            </tr>
          </table>

      		<div class="actions">
    				<%= f.submit '保存', class: "btn btn-outline-success col-12" %>
      		</div>
        </div>
      </div>
  	<% end %>

  </div>
</div>
