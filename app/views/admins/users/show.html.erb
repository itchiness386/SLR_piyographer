<%= render 'layouts/admins_header' %>

<div class="body">
  <div class="container">

    <h3><%= @user.name %></h3>

    <div class="row">
	    <div class="col-4 text-center">
	      <div id="profile_image">
	        <%= attachment_image_tag @user, :profile_image, :fill, 250, 250, fallback: "no_image_user.jpg" %>
	      </div>

        <table class="table">
          <tr>
            <td>Follows Followers</td>
          </tr>
          <tr>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <td>カメラ情報</td>
          </tr>
        </table>

        <%= link_to '編集', edit_admins_user_path(@user), class: "btn btn-outline-success col-12" %>
			</div>

      <div class="col-8">
        <% @photos.each do |photo| %>
          <%= link_to admins_photo_path(photo) do %>
            <%= attachment_image_tag photo, :image, :fill, 165, 110, fallback: "no_image_photo.jpg", class: "photo-index" %>
          <% end %>
        <% end %>
      </div>
     </div>

  </div>
</div>